<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <WebView
        android:id="@+id/webV_go"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@+id/id_web_view_bar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
        android:text="go!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/btnGo"
            android:layout_marginStart="30dp"
            android:layout_alignBaseline="@+id/txtToGo"
            android:layout_alignBottom="@+id/txtToGo"
            android:layout_toEndOf="@+id/txtToGo" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Hvor vil du hen?"
        android:ems="10"
            android:id="@+id/txtToGo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp" />

    </RelativeLayout>
    </RelativeLayout>